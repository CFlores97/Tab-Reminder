{
    "name": "Tab Reminder",
    "version": "1.0",
    "manifest_version": 3,
    "description": "This extension provides reminders set by the user, based on a specific website he is visiting",
    "icons": {
        "16": "icono/schnauzer.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "alarms",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Tab Reminder"
    }
}